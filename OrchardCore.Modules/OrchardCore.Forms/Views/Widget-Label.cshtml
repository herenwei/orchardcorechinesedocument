@using OrchardCore.Mvc.Utilities;
@*Until placement.json supports filtering on content types and parts, we need to override the Widget shape to prevent the TitlePart from being rendered. *@
@{
    var contentTypeClassName = ((string)Model.ContentItem.ContentType).HtmlClassify();
    Model.Classes.Add(contentTypeClassName);

    TagBuilder tag = Tag(Model, "div");
    tag.InnerHtml.AppendHtml(await DisplayAsync(Model.Content));
    tag.WriteTo(this.Output, this.HtmlEncoder);
}