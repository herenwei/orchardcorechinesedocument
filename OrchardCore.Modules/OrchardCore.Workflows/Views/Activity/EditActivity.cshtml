@model OrchardCore.Workflows.ViewModels.ActivityEditViewModel

<div data-workflow-type-id="@Model.WorkflowTypeId" data-activity-id="@Model.ActivityId">
    <h1>@RenderTitleSegments(T["Edit {0}", Model.Activity.Name.CamelFriendly()])</h1>

    <div asp-validation-summary="ModelOnly"></div>
    <form asp-action="Edit" asp-route-workflowtypeid="@Model.WorkflowTypeId" asp-route-activityid="@Model.ActivityId" asp-route-returnurl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="ActivityId" />
        @await DisplayAsync(Model.ActivityEditor)

        <fieldset>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">@T["Save"]</button>
                <a class="btn btn-secondary" href="@Model.ReturnUrl">@T["Cancel"]</a>
            </div>
        </fieldset>
    </form>
</div>