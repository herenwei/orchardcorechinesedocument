@model ActivityViewModel<HttpRequestFilterEvent>
@using OrchardCore.Workflows.Http.Activities

<header>
    <h4><i class="fa fa-bolt"></i>@Model.Activity.GetTitleOrDefault(() => T["Filter Incoming HTTP Request"])</h4>
</header>
<span>@T["<em>{0}</em>", Model.Activity.HttpMethod]</span>
<ul>
    @foreach (var routeValue in Model.Activity.RouteValues)
    {
        <li>@T["{0} = {1}", routeValue.Key, routeValue.Value]</li>
    }
</ul>